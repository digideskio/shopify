%section#forms
  %header
    %h1 New Invoice
  
  .row-fluid
    .span12
      = semantic_form_for @invoice, :html => { :class=>'form-horizontal'} do |f| 
        = f.inputs :name=>"Customer" do 
          = f.input :email, :input_html => {:class=>'input-xlarge'} 
          = f.input :name, :input_html => {:class=>'input-xlarge'} 
        = f.inputs :name=>'Invoice' do
          = f.input :total, :input_html => {:class=>'input-xlarge'} 
          = f.input :order_id, :input_html => {:class=>'input-xlarge'} 
          = f.input :order_number, :input_html => {:class=>'input-xlarge'}
        = f.inputs :name=>'Store' do
          = f.input :shop_id, :input_html => {:class=>'input-xlarge'} 
          = f.input :store_url, :input_html => {:class=>'input-xlarge'} 
          
        = f.actions do 
          = f.action :submit, :as => :button, :label=>'Submit', :button_html =>{:class=>'btn btn-primary', :disable_with => 'Wait...' }