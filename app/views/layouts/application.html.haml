!!!
%html{:lang => "en"}
  %head
    %title InvoiceXpress Shopify App
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/    
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag 'application'
    %link{:href => "../assets/favicon.png", :rel => "shortcut icon"}/
    %link{:href => "../assets/shopify-57.png", :rel => "apple-touch-icon"}/
    %link{:href => "../assets/shopify-72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "../assets/shopify-114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/

    /[if lt IE 8]
      = stylesheet_link_tag "font-awesome-ie7.min.css", media: "all"
      / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to image_tag('logo_main.png', :alt=>'InvoiceXpress'), '/', :class => 'brand'

          - if shop_session
            .nav-collapse
              %ul.nav
                %li{:class=>"#{active_nav_class('invoices')}"}
                  =link_to 'Invoices', invoices_path
                %li{:class=>"#{active_nav_class('home', 'setup')}"}
                  =link_to 'Setup', '/setup'
                %li{:class=>"#{active_nav_class('home', 'help')}"}
                  =link_to 'Help', '/help'
                /%li{:class=>"#{active_nav_class('home', 'change_language')}"}
                /  =link_to image_tag('en_flag.png', :alt=>'English'), '#'
                %li{:class=>"#{active_nav_class('home', 'change_language')}"}
                  =link_to image_tag('pt_flag.png', :alt=>'PortuguÃªs'), '#'

            %ul.nav.pull-right
              %li.dropdown
                = link_to raw(shop_session.url+' <b class="caret"></b>'), "https://#{shop_session.url}", :class => 'shop_name dropdown-toggle', :'data-toggle' => 'dropdown', :'data-target' => '#'
                %ul.dropdown-menu
                  %li= link_to "Store", "http://"+shop_session.url, :target => 'blank'
                  %li= link_to 'Shopify Admin', "http://"+shop_session.url+"/admin", :target => 'blank'
                  - if @shop
                    %li= link_to 'InvoiceXpress', "https://#{@shop.invoice_user}.invoicexpress.net/", :target => 'blank'
                  %li.divider
                  %li= link_to 'Logout', logout_path, :method => :delete
    .container
      .content
        -if flash.count>0
          .row-fluid
            .span12
              - flash.each do |name, msg|
                %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
                  %a.close{"data-dismiss" => "alert"} &#215;
                  = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
        = yield

      %footer
        %p 
          A Shopify app by
          %a{:href=>'http://www.invoicexpress.net', :target=>'blank'} InvoiceXpress
          | View the 
          %a{:href=>'http://www.invoicexpress.net', :target=>'blank'} Terms
          All rights reserved
    / /container
    = javascript_include_tag 'application'
