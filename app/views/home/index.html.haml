%br

%section#tables
  %header
    %h1 Recent Orders
  
  -if @orders.blank?
    .row-fluid
      .span12
        .alert.alert-block
          %h4.alert-heading Oops
          %p There are no orders in your store yet.
  
  -else
    %table.table.full-section.table-hover
      %thead
        %tr
          %th Order
          %th Placed by
          %th Payment Status
          %th Fulfillment
          %th Total
          %th Invoice
          %th Action
      %tbody
      - @orders.each do |order| 
        %tr
          %td.primary
            = link_to order.name, "https://#{shop_session.url}/admin/orders/#{order.id}", :target => 'blank'
          %td=order.billing_address.name
          %td
            %span.label{:class=>orderStatus(order)}
              = order.financial_status
          %td 
            %span.label{:class=>orderFulfilmentStatus(order)}
              = orderFulfilmentLabel(order)
          %td 
            = order.total_price
            = order.currency
          %td
            - invoiceid=orderInvoiceId(order)
            - if invoiceid
              %a{:href=>"https://#{@shop.invoice_user}.invoicexpress.net/invoices/#{invoiceid}", :target=>'blank'} View on InvoiceXpress
          %td
            .btn-group
              %a.btn.btn-success{ :href=> "https://#{shop_session.url}/admin/orders/#{order.id}", :target => 'blank'} View Order
              %a.btn.btn-success.dropdown-toggle{"data-toggle" => "dropdown"}
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Create Invoice', new_invoice_path(:order_id=>order.id)                   